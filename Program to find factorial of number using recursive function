/*
Name : Nishanth R
Date : 26.11.2021
Description : Program to find factorial of number using recursive function
Input : Enter the value of N : 5
Output : Factorial of number is :120
*/

#include<stdio.h>
int main()
{
        char choice;
        static int num,flag=0,fact =1; // intilizing static values
        if (flag==0)
        {
                printf("Enter the value of N:");
                scanf("%d",&num);
                flag=1;
        }
        fact=fact*num; // operation for factorial
        num--;
        if (num != 1)
        {
                return main(); // calling function recursively
        }
        else
                printf("Factorial of number is :%d\n",fact);
        printf("Do you want continue(y/Y):");
        scanf("\n%c",&choice);
        if (choice == 'y' || choice == 'Y')
        {
                flag=0;
                fact=1; //assiging fact to 1 because of static values
                main(); // calling function to do nxt factorial operation
        }

}
