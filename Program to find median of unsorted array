/*
Name : Nishanth R
Date : 11.11.2021
Description : Program to find median of unsorted array
Input :
Output :
Enter the size of array A :5
Enter the elements one by one for Array A :5 4 3 2 1
After sorting Array A :1 2 3 4 5
Median of Array A = 3.000000
Enter the size of Array B :4
Enter the elements one by one for Array B :4 3 2 1
After sorting Array B:1 2 3 4
Median of array B = 2.500000
Median for both arrays = 2.750000
*/


#include<stdio.h>
int main()
{
        char choice;
        do
        {

                int size,size1; // initilizing sizes for array
                float sum1=0,sum2=0,result=0,median1,median2; // initlizing float values
                printf("Enter the size of array A :");
                scanf("%d",&size);
                if (size >= 1 && size <= 11) // condition for array size range
                {
                        printf("Enter the elements one by one for Array A :");
                        int arr1[size]; // initilizing array
                        for (int i=0;i<size;i++) // iterating over size of array
                        {
                                scanf("%d",&arr1[i]); // geeting array elements
                        }
                        int temp=0;
                        for(int i=0;i<size;i++)
                        {
                                for(int j=i+1;j<size;j++)     // sorting array elements
                                {
                                        if(arr1[i]>arr1[j])
                                        {
                                                temp=arr1[i];
                                                arr1[i]=arr1[j];
                                                arr1[j]=temp;
                                        }
                                }
                        }
                        printf("After sorting Array A :");
                        for(int i=0;i<size;i++)
                        {
                                printf("%d ",arr1[i]); // printing sorted array elements
                        }
                        printf("\n");

                        if (size%2!=0) // conditon for checking odd size of array
                        {
                                median1=arr1[size/2];  // finding median
                                printf("Median of Array A = %f\n",median1);
                        }
                        else   // for even size of array
                        {
                                sum1=arr1[size/2];
                                sum2=arr1[(size/2)-1];
                                median1=(sum1+sum2)/2;
                                printf("Median of Array A = %f\n",median1);
                        }
                }
                else
                        printf("Maximum array elements exceeded\n");

                printf("Enter the size of Array B :");
                scanf("%d",&size1); // getting size of array
                if (size1 >= 1 && size1 <= 11)  // condition for array size range
                {
                        int arr2[size1];  // intilizing arr2
                        printf("Enter the elements one by one for Array B :");
                        for (int z=0;z<size1;z++)
                        {

                                scanf("%d",&arr2[z]); // getting second array elements
                        }
                        int temp1=0;
                        for (int i=0;i<size1;i++)    // sorting of array
                        {
                                for (int j=i+1;j<size1;j++)
                                {
                                        if (arr2[i] > arr2[j])
                                        {
                                                temp1 = arr2[i];
                                                arr2[i] = arr2[j];
                                                arr2[j] = temp1;

                                        }
                                }
                        }
                        printf("After sorting Array B:");
                        for(int i=0;i<size1;i++)
                        {
                                printf("%d ",arr2[i]);   // printing sorted array elements
                        }
                        printf("\n");
                        if (size1%2!=0)   // checking for odd array size
                        {
                                median2=arr2[size1/2]; // finding meadian
                                printf("Median of Array B = %f\n",median2);
                        }
                        else   // for even array size
                        {
                                sum1=arr2[size1/2];
                                sum2=arr2[(size1/2)-1];
                                median2=(sum1+sum2)/2;   // finding median
                                printf("Median of array B = %f\n",median2);
                        }
                }
                else
                        printf("Maximum array elements exceeded\n");
                result = (median1 + median2)/2;   // finding median from both medians
                printf("Median for both arrays = %f\n",result);
                printf("Do you want to continue(y/Y)?");
                scanf(" %c",&choice);
        }while(choice == 'y' || choice == 'Y');

}
