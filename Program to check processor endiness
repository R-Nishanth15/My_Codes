Name : Nishanth R
Date : 27.11.2021
Description : Program to check processor endiness
Input : Enter any number: 120
Output : Little endian system
*/


#include<stdio.h>
int endiness(int *num)   // function initilizing
{
        char *ptr =(char *) num; // using char pointer to fetch only 8 bit of the num to check endiness
        if(*ptr == (*num & ((1<<8)-1)))  // condition to check endiness of the system
        {
                return 1;
        }
}
int main()
{
        char choice;
        do
        {
                int num,res; // initlizing values
                printf("Enter any number: ");
                scanf("%d",&num);
                res=endiness(&num); // function call
                if (res == 1)
                        printf("Little endian system\n");
                else
                        printf("big endian system\n");
                printf("Do you want to continue(y/Y)?:");
                scanf(" %c",&choice);
        }
        while( choice == 'y' || choice == 'Y');
}
